<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.github.fpure.adminlab.mapper.MenuMapper">

    <insert id="save" parameterType="io.github.fpure.adminlab.model.Menu">
        <selectKey resultType="long" order="AFTER" keyProperty="id">
            SELECT LAST_INSERT_ROWID()
        </selectKey>
        INSERT INTO rbac_menu
        (id,pid,name,icon,url,seq,is_enable,is_leaf_node)
        VALUES
        (#{id},#{pid},#{name},#{icon},#{url},#{seq},#{isEnable},#{isLeafNode})
    </insert>

    <delete id="delete" parameterType="long">
    	DELETE FROM rbac_menu WHERE id=#{id}
    </delete>

    <update id="update" parameterType="io.github.fpure.adminlab.model.Menu">
		UPDATE rbac_menu SET
            id=#{id},
            pid=#{pid},
            name=#{name},
            icon=#{icon},
            url=#{url},
            seq=#{seq},
            is_enable=#{isEnable},
            is_leaf_node=#{isLeafNode},
		WHERE id=#{id}
    </update>

    <resultMap id="result" type="io.github.fpure.adminlab.model.Menu">
        <id property="id" column="id" />
        <result property="pid" column="pid" />
        <result property="name" column="name" />
        <result property="icon" column="icon" />
        <result property="url" column="url" />
        <result property="seq" column="seq" />
        <result property="isEnable" column="is_enable" />
        <result property="isLeafNode" column="is_leaf_node" />
    </resultMap>

    <sql id="where">
        <where>
            <if test="@Ognl@isNotEmpty(id)">and id=#{id}</if>
            <if test="@Ognl@isNotEmpty(pid)">and pid=#{pid}</if>
            <if test="@Ognl@isNotEmpty(name)">and name=#{name}</if>
            <if test="@Ognl@isNotEmpty(icon)">and icon=#{icon}</if>
            <if test="@Ognl@isNotEmpty(url)">and url=#{url}</if>
            <if test="@Ognl@isNotEmpty(seq)">and seq=#{seq}</if>
            <if test="@Ognl@isNotEmpty(isLeafNode)">and is_leaf_node=#{isLeafNode}</if>
            <if test="@Ognl@isNotEmpty(allMenu)">and is_enable=1</if>
        </where>
    </sql>

    <select id="getByMap" parameterType="map" resultMap="result">
        SELECT * FROM rbac_menu
        <include refid="where" />
        ORDER BY seq,id
    </select>

    <select id="getById" parameterType="long" resultMap="result">
    	SELECT * FROM rbac_menu WHERE id=#{id}
    </select>

</mapper>